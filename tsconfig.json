{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",   
    "outDir": "dist",                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "ws", "express", "cors"],  
    "typeRoots": ["node_modules/@types"]                               
  }
}
